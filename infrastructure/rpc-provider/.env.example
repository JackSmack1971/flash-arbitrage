# RPC Provider Configuration
# Copy this file to .env and fill in your RPC URLs

# Alchemy RPC Endpoint (Priority: 2)
RPC_ALCHEMY_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Infura RPC Endpoint (Priority: 1)
RPC_INFURA_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# QuickNode RPC Endpoint (Priority: 1)
RPC_QUICKNODE_URL=https://YOUR-ENDPOINT.quiknode.pro/YOUR_QUICKNODE_KEY

# Network Configuration
NETWORK=mainnet  # Options: mainnet, sepolia

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000  # 30 seconds
HEALTH_CHECK_TIMEOUT_MS=5000    # 5 seconds

# Failover Configuration
STALL_TIMEOUT_MS=5000           # 5 seconds
QUORUM=1                         # Number of providers that must agree

# Logging
LOG_LEVEL=info  # Options: debug, info, warn, error

# Flashbots Configuration
FLASHBOTS_RELAY_URL=https://relay.flashbots.net  # Mainnet relay
# FLASHBOTS_RELAY_URL=https://relay-sepolia.flashbots.net  # Sepolia relay
FLASHBOTS_AUTH_SIGNER=0x...  # Private key for Flashbots authentication (separate from transaction signer)
FLASHBOTS_ENABLED=true        # Enable Flashbots submission
FLASHBOTS_MAX_BLOCKS_WAIT=25  # Maximum blocks to wait for bundle inclusion
