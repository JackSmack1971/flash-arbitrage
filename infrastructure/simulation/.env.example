# Simulation Configuration
# Copy this file to .env and fill in your configuration

# Fork Source RPC (must be fast for good performance)
FORK_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Network Configuration
NETWORK=mainnet  # Options: mainnet, sepolia

# Simulation Configuration
SIMULATION_TIMEOUT_MS=10000      # 10 seconds max per simulation
MIN_PROFIT_THRESHOLD_USD=30      # Minimum profit in USD to execute
MIN_PROFIT_THRESHOLD_WEI=10000000000000000  # 0.01 ETH minimum

# Gas Configuration
MAX_GAS_PRICE_GWEI=100           # Maximum gas price willing to pay
PRIORITY_FEE_GWEI=2              # Priority fee for EIP-1559 transactions

# Slippage Configuration
MAX_SLIPPAGE_BPS=200             # Maximum slippage (2%)

# Aave V3 Configuration
AAVE_V3_FLASH_LOAN_FEE_BPS=5     # Aave V3 flash loan fee (0.05%)

# Logging
LOG_LEVEL=info  # Options: debug, info, warn, error
