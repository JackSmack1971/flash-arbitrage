# Arbitrage Bot Configuration
# Copy this file to .env and fill in your configuration

# Network Configuration
NETWORK=mainnet  # Options: mainnet, sepolia
CHAIN_ID=1       # 1 for mainnet, 11155111 for Sepolia

# RPC Provider Configuration (Multi-RPC Failover)
RPC_ALCHEMY_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
RPC_INFURA_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
RPC_QUICKNODE_URL=https://YOUR_ENDPOINT.quiknode.pro/YOUR_QUICKNODE_KEY

# Flashbots Configuration
FLASHBOTS_ENABLED=true                           # Enable/disable Flashbots submission
FLASHBOTS_RELAY_URL=https://relay.flashbots.net  # Mainnet relay
# FLASHBOTS_RELAY_URL=https://relay-sepolia.flashbots.net  # Sepolia relay
FLASHBOTS_AUTH_SIGNER=0x...                      # Private key for Flashbots authentication
FLASHBOTS_MAX_BLOCKS_WAIT=25                     # Maximum blocks to wait for bundle inclusion

# Simulation Configuration
FORK_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY  # Fast RPC for forking
SIMULATION_ENABLED=true                          # Enable/disable pre-flight simulation
SIMULATION_TIMEOUT_MS=10000                      # 10 seconds max per simulation

# Transaction Signer
PRIVATE_KEY=0x...                                # Private key for signing transactions (KEEP SECURE!)

# Flash Arbitrage Contract
FLASH_ARB_CONTRACT=0x...                         # Deployed FlashArbMainnetReady contract address

# Profitability Thresholds
MIN_PROFIT_WEI=10000000000000000                 # 0.01 ETH minimum profit
MIN_PROFIT_USD=30                                # $30 minimum profit (for logging)

# Gas Configuration
MAX_GAS_PRICE_GWEI=100                           # Maximum gas price willing to pay
PRIORITY_FEE_GWEI=2                              # Priority fee for EIP-1559

# Monitoring Configuration
MONITOR_INTERVAL_MS=12000                        # 12 seconds (1 block)
HEALTH_CHECK_INTERVAL_MS=30000                   # 30 seconds

# Logging
LOG_LEVEL=info  # Options: debug, info, warn, error
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/arbitrage-bot.log

# Emergency Configuration
EMERGENCY_SHUTDOWN_ADDRESS=0x...                 # Address that can trigger emergency shutdown
MAX_CONSECUTIVE_FAILURES=5                       # Max failures before auto-pause
